{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@server/*": ["src/*"],
            "@tests/*": ["tests/*"]
        },
      "lib": [
        "decorators",
        "dom",
        "es5",
        "scripthost",
        "es2015.collection"
      ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
    }
}
